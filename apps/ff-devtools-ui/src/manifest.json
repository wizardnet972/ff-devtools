{
  "manifest_version": 3,
  "name": "Feature Flags Devtools",
  "short_name": "FF Devtools",
  "version": "1.0.0",
  "description": "Manage and toggle feature flags from Chrome DevTools in real time.",
  "author": "wizardnet972",
  "homepage_url": "https://github.com/wizardnet972/ff-devtools",
  "privacy_policy": "https://github.com/wizardnet972/ff-devtools/blob/main/apps/ff-devtools-ui/PRIVACY_POLICY.md",

  "permissions": ["tabs", "storage"],

  "host_permissions": [
    "https://app.example.com/*",
    "https://staging.app.example.com/*",
    "http://localhost:4200/*"
  ],

  "action": {
    "default_popup": "index.html",
    "default_title": "Feature Flags Devtools",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://app.example.com/*",
        "https://staging.app.example.com/*",
        "http://localhost:4200/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "devtools_page": "devtools.html",

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
