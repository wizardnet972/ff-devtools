{
  "name": "ff-devtools-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/ff-devtools-ui/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/ff-devtools-ui",
        "browser": "apps/ff-devtools-ui/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/ff-devtools-ui/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/ff-devtools-ui/public"
          },
          {
            "glob": "manifest.json",
            "input": "apps/ff-devtools-ui/src",
            "output": "/"
          },
          {
            "glob": "content-script.js",
            "input": "apps/ff-devtools-ui/src",
            "output": "/"
          },
          {
            "glob": "background.js",
            "input": "apps/ff-devtools-ui/src",
            "output": "/"
          },
          {
            "glob": "devtools.html",
            "input": "apps/ff-devtools-ui/src",
            "output": "/"
          },
          {
            "glob": "devtools.js",
            "input": "apps/ff-devtools-ui/src",
            "output": "/"
          },
          {
            "glob": "devtools-panel.html",
            "input": "apps/ff-devtools-ui/src",
            "output": "/"
          },
          {
            "glob": "devtools-panel.js",
            "input": "apps/ff-devtools-ui/src",
            "output": "/"
          },
          {
            "glob": "**/*",
            "input": "apps/ff-devtools-ui/src/icons",
            "output": "/icons"
          },
          {
            "glob": "favicon.svg",
            "input": "apps/ff-devtools-ui/src",
            "output": "/"
          },
          {
            "glob": "favicon.ico",
            "input": "apps/ff-devtools-ui/public",
            "output": "/"
          }
        ],
        "styles": ["apps/ff-devtools-ui/src/styles.scss"]
      },
      "configurations": {
        "production": {
          "optimization": {
            "styles": {
              "minify": true,
              "inlineCritical": false
            }
          },
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "ff-devtools-ui:build:production"
        },
        "development": {
          "buildTarget": "ff-devtools-ui:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "ff-devtools-ui:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/ff-devtools-ui"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "ff-devtools-ui:build",
        "port": 4200,
        "staticFilePath": "dist/apps/ff-devtools-ui/browser",
        "spa": true
      }
    }
  }
}
